{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "config/types/enum-array.type.ts",
    "config/types/decimal.type.ts"
  ],
  "exclude": ["node_modules", "dist", "uploads"]
}
